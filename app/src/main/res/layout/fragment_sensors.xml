<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorsFragment">

    <!-- TODO: Update blank fragment layout -->


    <TextView
        android:id="@+id/textView4"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:text="Azimuth"
        android:translationY="10dp" />

    <TextView
        android:id="@+id/textViewAzimuth"
        android:layout_width="211dp"
        android:layout_height="32dp"
        android:text="0"
        android:translationX="200dp"
        android:translationY="10dp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="190dp"
        android:layout_height="34dp"
        android:text="Pitch"
        android:translationY="50dp" />

    <TextView
        android:id="@+id/textViewPitch"
        android:layout_width="208dp"
        android:layout_height="32dp"
        android:text="0"
        android:translationX="200dp"
        android:translationY="50dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="190dp"
        android:layout_height="33dp"
        android:text="Roll"
        android:translationY="90dp" />

    <TextView
        android:id="@+id/textViewRoll"
        android:layout_width="208dp"
        android:layout_height="36dp"
        android:text="0"
        android:translationX="200dp"
        android:translationY="90dp" />

    <Button
        android:id="@+id/takePhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:translationX="275dp"
        android:translationY="300dp" />

    <ImageView
        android:id="@+id/photo"
        android:layout_width="203dp"
        android:layout_height="174dp"
        android:translationX="30dp"
        android:translationY="250dp"
        tools:src="@drawable/picture" />

    <Button
        android:id="@+id/play"
        android:layout_width="83dp"
        android:layout_height="56dp"
        android:text=""
        android:translationX="125dp"
        android:translationY="550dp"
        app:icon="@drawable/play_small" />

    <Button
        android:id="@+id/pause"
        android:layout_width="80dp"
        android:layout_height="55dp"
        android:text=""
        android:translationX="225dp"
        android:translationY="550dp"
        app:icon="@drawable/pause_small" />
</FrameLayout>